{
  "defaultSeverity": "error",
  "extends": [
    "tslint:latest",
    "tslint-config-prettier"
  ],
  "jsRules": {},
  "rules": {
    "no-implicit-dependencies": {
      "severity": "warn"
    },
    "no-duplicate-imports": {
      "severity": "off"
    },
    "no-console": {
      "severity": "warn" // temporary
    },
    "@typescript-eslint/no-duplicate-imports": ["error"],
    "prettier": [
      true, {
        "printWidth": 80,
        "tabWidth": 2,
        "useTabs": false,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "always"
      }
    ]
  },
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ]
}
